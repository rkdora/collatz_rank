<h1>問題作成</h1>

<%= form_with model: @theme, local: true do |f| %>
  <%= inform_validation_error @theme %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :body %>
  <%= f.text_area :body, class: 'form-control' %>
  <p>回答例を載せましょう。</p>
  <%= f.submit '作成', class: 'btn btn-primary' %>
<% end %>
